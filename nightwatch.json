{
    "src_folders": ["src/tests"],
    "output_folder": "reports",
    "custom_commands_path": "./commands",
    "custom_assertions_path": "",
    "page_objects_path": "src/pages",
    "globals_path": "src/globals",
    "selenium": {
        "start_process": true,
        "server_path": "node_modules/selenium-server-standalone-jar/jar/selenium-server-standalone-3.0.1.jar",
        "host": "127.0.0.1",
        "port": 4444,
        "cli_args": {
            "phantomjs.binary.path": "node_modules/phantomjs-prebuilt/lib/phantom/bin/phantomjs",
            "webdriver.chrome.driver": "node_modules/chromedriver/lib/chromedriver/chromedriver",
            "webdriver.gecko.driver": "node_modules/geckodriver/bin/geckodriver"
        }
    },
    "test_workers" : {
        "enabled" : false,
        "workers" : "auto"
    },
    "parallel_process_delay" : 100,
    "test_settings": {
        "default": {
            "launch_url": "http://localhost",
            "selenium_port": 4444,
            "selenium_host": "localhost",
            "silent": true,
            "output": true,
            "skip_testcases_on_fail": false,
            "screenshots": {
                "enabled": true,
                "on_failure": true,
                "on_error": true,
                "path": "./reports/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "firefox",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            }
        },
        "ie-10": {
            "screenshots": {
                "path": "./reports/ie-10/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "internet explorer",
                "version": "10",
                "elementScrollBehavior": 1,
                "javascriptEnabled": true,
                "acceptSslCerts": true,
                "Enhanced Protected Mode" : false,
                "enablePersistentHover" : true
            }
        },
        "ie-11": {
            "screenshots": {
                "path": "./reports/ie-11/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "internet explorer",
                "version": "11",
                "elementScrollBehavior": 1,
                "javascriptEnabled": true,

                "acceptSslCerts": true,
                "Enhanced Protected Mode" : false,
                "enablePersistentHover" : true
            }
        },
        "firefox": {
            "screenshots": {
                "path": "./reports/firefox/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "firefox",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            }
        },
        "chrome": {
            "screenshots": {
                "path": "./reports/chrome/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true,
                "chromeOptions": {
                    "args": [
                        "disable-web-security"
                    ]
                }
            }
        },
        "ipad": {
            "screenshots": {
                "path": "./reports/ipad/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true,

